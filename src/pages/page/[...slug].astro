---
import { type CollectionEntry, getCollection } from "astro:content";
import MarkdownContent from "../../layouts/MarkdownContent.astro";
import ImageWithTitle from "../../components/ImageWithTitle.astro";
import { Code } from "astro/components";
import BlockQuote from "../../components/BlockQuote.astro";
import H2 from "../../components/H2.astro";
import H3 from "../../components/H3.astro";
import Hr from "../../components/Hr.astro";
import OrderedList from "../../components/OrderedList.astro";
import Paragraph from "../../components/Paragraph.astro";
import UnorderedList from "../../components/UnorderedList.astro";

export async function getStaticPaths() {
  const pages = await getCollection("page");
  return pages.map((page) => ({
    params: { slug: page.slug },
    props: page,
  }));
}

type Props = CollectionEntry<"page">;

const page = Astro.props;
const { Content } = await page.render();
---

<MarkdownContent {...page.data}>
  <Content
    components={{
      img: ImageWithTitle,
      pre: Code,
      ol: OrderedList,
      ul: UnorderedList,
      p: Paragraph,
      h2: H2,
      h3: H3,
      hr: Hr,
      blockquote: BlockQuote,
    }}
  />
</MarkdownContent>
