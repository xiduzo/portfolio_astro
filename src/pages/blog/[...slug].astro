---
import { type CollectionEntry, getCollection } from "astro:content";
import MarkdownContent from "../../layouts/MarkdownContent.astro";
import Code from "../../components/Code.astro";
import OrderedList from "../../components/OrderedList.astro";
import BlockQuote from "../../components/BlockQuote.astro";
import H2 from "../../components/H2.astro";
import H3 from "../../components/H3.astro";
import Hr from "../../components/Hr.astro";
import ImageWithTitle from "../../components/ImageWithTitle.astro";
import Paragraph from "../../components/Paragraph.astro";
import UnorderedList from "../../components/UnorderedList.astro";

export async function getStaticPaths() {
  const blogs = await getCollection("blog");
  return blogs.map((blog) => ({
    params: { slug: blog.slug },
    props: blog,
  }));
}
type Props = CollectionEntry<"blog">;

const blog = Astro.props;
const { Content } = await blog.render();
---

<MarkdownContent {...blog.data} showDates>
  <Content
    components={{
      img: ImageWithTitle,
      pre: Code,
      ol: OrderedList,
      ul: UnorderedList,
      p: Paragraph,
      h2: H2,
      h3: H3,
      hr: Hr,
      blockquote: BlockQuote,
    }}
  />
</MarkdownContent>
