---
import HeaderLink from "./HeaderLink.astro";
---

<header
  class="w-full overflow-hidden sticky top-0 h-14 backdrop-blur bg-white/50 z-20"
>
  <section
    class="container m-auto flex justify-between items-center px-6 md:px-0"
  >
    <a href="/" class="group">
      <h2
        aria-label="portfolio sander boer"
        class="text-4xl transition-all translate-y-2 md:translate-y-4 group-hover:-translate-y-2 group-focus:-translate-y-2"
      >
        Sander
      </h2>
    </a>
    <nav class="-translate-y-2">
      <HeaderLink href="/">Portfolio</HeaderLink>
      <!-- <HeaderLink href="/blog">Blog</HeaderLink> -->
      <HeaderLink href="/page/about">About</HeaderLink>
    </nav>
  </section>
</header>
